<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FRONTEND.ToDoItemPage"
             Title="ToDos bearbeiten">
    <ContentPage.Content>
        <StackLayout
            Margin="20"
            Spacing="10"
            VerticalOptions="StartAndExpand">

            <Label Text="Titel" />
            <Entry Text="{Binding Title}" />

            <Label Text="Text" />
            <Entry Text="{Binding Text}" />

            <StackLayout Orientation="Horizontal">
                <Label
                    Margin="0,10"
                    HorizontalOptions="StartAndExpand"
                    Text="ToDo abgeschlossen?" />
                <Switch HorizontalOptions="EndAndExpand" IsToggled="{Binding IsCompleted}" />
            </StackLayout>

            <Button Clicked="OnSaveClicked" Text="Speichern" />
            <Button Clicked="OnDeleteClicked" Text="Löschen" />
            <Button Clicked="OnCancelClicked" Text="Abbrechen" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>